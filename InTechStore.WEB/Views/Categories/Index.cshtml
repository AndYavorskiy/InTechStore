@model IEnumerable<InTechStore.WEB.ViewModels.DetailsCategoryViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="ui container">
    <div class="ui header">Категорії</div>

    <div class="ui blue button">
        <i class="plus icon"></i>
        @Html.ActionLink("Додати категорію", "Create", routeValues: null, htmlAttributes: new { @style = "color: white;" })
    </div>

    <table class="ui fixed single line celled table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="ui collapsing"></th>
            </tr>
        </thead>

        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <div class="ui compact buttons">
                        <a href=@Url.Action("Edit", new { id = item.Id }) class="ui icon yellow button">
                            <i class="edit icon"></i>
                        </a>

                        @*<a href=@Url.Action("Details", new { id = item.Id }) class="ui icon blue button">
                            <i class="info  icon"></i>
                        </a>*@

                        <a href=@Url.Action("Delete",new { id = item.Id }) class="ui icon red button">
                            <i class="remove icon"></i>
                        </a>
                    </div>

                </td>
            </tr>
        }

    </table>
</div>