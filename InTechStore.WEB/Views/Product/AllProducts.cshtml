@model  IEnumerable<InTechStore.WEB.ViewModels.ProductInfoViewModel>

@{
    ViewBag.Title = "Index";
}
<div class="ui container">
    <div class="ui header">Всі товари</div>
    @Html.ActionLink("Додати товар", "Create")

    <table class="ui padded table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Image)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.IsInStock)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.IsInStock)
                {
                    <tr>
                        <td>@Html.DisplayFor(Item => item.Id)</td>
                        <td><img src="@item.Image" class="ui mini image" /></td>
                        <td>@Html.DisplayFor(Item => item.Name)</td>
                        <td>@Html.DisplayFor(Item => item.Price)</td>
                        <td> @Html.DisplayFor(Item => item.IsInStock)</td>
                        <td>
                            @Html.ActionLink("Деталі", "Details", new { Id = item.Id }) |
                            @Html.ActionLink("Видалити", "Delete", new { Id = item.Id }) |
                            @Html.ActionLink("Редагувати", "Edit", new { Id = item.Id })
                        </td>
                    </tr>

                }
                else
                {
                    <tr class="negative">
                        <td>@Html.DisplayFor(Item => item.Id)</td>
                        <td><img src="@item.Image" class="ui mini image" /></td>
                        <td>@Html.DisplayFor(Item => item.Name)</td>
                        <td>@Html.DisplayFor(Item => item.Price)</td>
                        <td> @Html.DisplayFor(Item => item.IsInStock)</td>
                        <td>
                            @Html.ActionLink("Деталі", "Details", new { Id = item.Id }) |
                            @Html.ActionLink("Видалити", "Delete", new { Id = item.Id }) |
                            @Html.ActionLink("Редагувати", "Edit", new { Id = item.Id })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>