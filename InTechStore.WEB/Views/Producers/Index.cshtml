@model IEnumerable<InTechStore.DAL.Entities.Producer>

@{
    ViewBag.Title = "Index";
}


<div class="ui content">
    <div class="ui header">Виробники</div>

    <div class="ui blue button">
        <i class="plus icon"></i>
        @Html.ActionLink("Додати виробника", "Create", routeValues: null, htmlAttributes: new { @style = "color: white;" })
    </div>

    <table class="ui fixed single line celled table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th class="ui collapsing"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        <img src="@item.Image" class="ui tiny image centered" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        <div class="ui compact buttons">
                            <a href=@Url.Action("Details", new { id = item.Id }) class="ui icon blue button">
                                <i class="info  icon"></i>
                            </a>
                            <a href=@Url.Action("Edit", new { id = item.Id }) class="ui icon yellow button">
                                <i class="edit icon"></i>
                            </a>
                            <a href=@Url.Action("Delete",new { id = item.Id }) class="ui icon red button">
                                <i class="remove icon"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


