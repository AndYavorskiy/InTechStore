@model InTechStore.DAL.Entities.Discount

@{
    ViewBag.Title = "Видалення знижки";
}

<div class="ui container stackable segment">

    <div class="ui icon warning message">
        <i class=" massive remove  icon"></i>
        <div class="content">
            <div class="header">
                Видалення знижки
            </div>

            <p>Ви впевнені, що хочете видалити знижку "<b>@Html.DisplayFor(model => model.Value)%</b>"</p>
            <p>Номер сертифікату: <b>@Html.DisplayFor(model => model.Code)</b></p>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="ui buttons">
            @Html.ActionLink("Назад", "Index", null, htmlAttributes: new { @class = "ui button" })
            <input type="submit" value="Delete" class="ui button negative" />
        </div>
    }
</div>