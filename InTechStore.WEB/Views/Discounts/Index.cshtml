@model IEnumerable<InTechStore.DAL.Entities.Discount>

@{
    ViewBag.Title = "Index";
}

<div class="ui content">
    <div class="ui header">Купони на знижку</div>

    <div class="ui blue button">
        <i class="plus icon"></i>
        @Html.ActionLink("Створити знижжку", "Create", routeValues: null, htmlAttributes: new { @style = "color: white;" })
    </div>

    <table class="ui fixed single line celled table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Value)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th class="ui collapsing"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        <div class="ui compact buttons">
                            <a href=@Url.Action("Delete",new { id = item.Id }) class="ui icon red button">
                                <i class="remove icon"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

