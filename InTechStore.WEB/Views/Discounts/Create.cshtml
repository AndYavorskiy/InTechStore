@model InTechStore.DAL.Entities.Discount
@{
    ViewBag.Title = "Create";
}

<div class="ui container">

    @using (Html.BeginForm("Create", "Discounts", null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "ui form segment" }))
    {
        <h1 class="ui text header">Створити знижку</h1>
        @Html.AntiForgeryToken()


        <div class="required field">
            <label>
                @Html.LabelFor(model => model.Value)
            </label>
            <div>
                @Html.EditorFor(model => model.Value)
                @Html.ValidationMessageFor(model => model.Value)
            </div>
        </div>

        @Html.ValidationSummary(true)

        <div>
            @Html.ActionLink("Назад", "Index", null, new { @class = "ui button primary" })
            <input type="submit" value="Створити" class="ui button positive" />
        </div>
    }
</div>